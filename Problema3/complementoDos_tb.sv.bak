module complementoDos_tb();
	parameter N = 8;
	logic [N-1:0] a, y;
	
	complementoDos #(N) modulo(a,z);
	
	initial begin
		$display("Tiempo | a      | y (Complemento a Dos)");
		$monitor("%0t    | %b | %b", $time, a, y);
	
	
		// Prueba 0
		a = 8'b00001001; // -1 en binario
		#10;
		assert (y===8'b00001111) $error("Prueba 0 fallida.");
	end
endmodule